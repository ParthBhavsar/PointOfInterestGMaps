<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.zeroxp.pointofinterestgmaps.DataFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<DatePicker-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></DatePicker>-->

    <!--layout_gravity specifies where the TabLayout is drawn within the ViewPager. -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_Data"
        android:layout_width="match_parent"
        app:tabTextAppearance="?android:attr/textAppearanceMedium"
        app:tabTextColor="#ffffff"
        android:layout_height="?android:actionBarSize"
        app:tabMode="fixed"
        app:tabGravity="fill"
        />



    <io.zeroxp.pointofinterestgmaps.DataCustomViewPager
        android:id="@+id/viewPager_Data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout_Data"
        >


    </io.zeroxp.pointofinterestgmaps.DataCustomViewPager>

</RelativeLayout>
